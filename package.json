{
  "name": "zomink-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --poll --respawn --transpile-only --exit-child --watch src ./src/app.ts",
    "build": "rm -rf ./dist && node ./scripts/build.js",
    "format": "prettier --write ./src",
    "lint": "eslint --ext .ts,.js ./src",
    "prepare": "husky install",
    "start": "node ./dist/index.js"
  },
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.184",
    "@types/morgan": "^1.9.3",
    "@types/nodemailer": "^6.4.5",
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "@typescript-eslint/parser": "^5.36.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.6",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.11.2",
    "argon2": "^0.29.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.1",
    "express": "^5.0.0-beta.1",
    "helmet": "^6.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.5.3",
    "morgan": "^1.10.0",
    "nanoid": "3.3.4",
    "nodemailer": "^6.7.8",
    "pino": "^8.4.2",
    "pino-pretty": "^9.1.0",
    "zod": "^3.18.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,md,json,yml,yaml}": "prettier --write"
  }
}
