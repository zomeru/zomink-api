{
  "name": "zomink-server",
  "version": "1.0.0",
  "main": "dist/app.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/app.ts",
    "watch": "cross-env NODE_ENV=development nodemon",
    "build": "rimraf dist & etsc",
    "build:dev": "yarn lint && rimraf dist & etsc",
    "format": "prettier --write ./src",
    "lint": "eslint --ext .ts,.js ./src",
    "prepare": "husky install",
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "clean": "rimraf dist && rimraf node_modules"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.11.2",
    "argon2": "^0.29.1",
    "axios": "^0.27.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.1",
    "express": "4.18.1",
    "express-rate-limit": "^6.6.0",
    "helmet": "^6.0.0",
    "hpp": "^0.2.3",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.5.3",
    "morgan": "^1.10.0",
    "nanoid": "3.3.4",
    "node-fetch": "2.6.7",
    "nodemailer": "^6.7.8",
    "nodemailer-express-handlebars": "^5.0.0",
    "pino": "^8.4.2",
    "pino-pretty": "^9.1.0",
    "qs": "^6.11.0",
    "x-xss-protection": "^2.0.0",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.184",
    "@types/morgan": "^1.9.3",
    "@types/nodemailer": "^6.4.5",
    "@types/nodemailer-express-handlebars": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "@typescript-eslint/parser": "^5.36.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.6",
    "esbuild-node-tsc": "^2.0.2",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,md,json,yml,yaml}": "prettier --write"
  },
  "packageManager": "yarn@3.2.3"
}
